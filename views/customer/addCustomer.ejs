<% include ../partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <% if (department.length > 0) {%>
        <form class="addCustomerForm" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="customerID" id="customerID" placeholder="Customer ID" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="customerName" id="customerName" placeholder="Customer name" required>
                </div>

                <select name="department" class="selectDepartment">

                        <% department.forEach((department, index) => { %>

                        <option value="<%=department.departmentID%>"><%= department.departmentName %></option>
                    
                        <% }) %>
                    </select>
                  
            </div>
                <div class="col-md-12">
                    <label for="customerIMG"><b>Customer Image</b></label><br>
                    <input type="file" name="image" id="customerIMG" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Customer</button>
        </form>
        <% } else { %>
            <p class="text-center">Create department first. Go <a href="/addDepartment" >here</a> to add Department.</p>
        <% } %>
    </div>
</div>
</body>
</html>
